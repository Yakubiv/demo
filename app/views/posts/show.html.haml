= content_for(:title, "Шпаргалка")
.col-lg-12	
	%h2.align Шпаргалка
	.panel
		%h2.align
			= @post.title
		.panel-body
			%hr
			- if current_user == @user
				= link_to(fa_icon('trash', title: 'Delete'), post_path(@post), confirm: 'Are you sure?', method: :delete, class: 'btn btn-lg navbar-btn')
				= link_to(fa_icon('edit', title:'Edit post'), edit_user_post_path(@user, @post), class: "btn btn-lg navbar-btn")
			-else
				%h4	Cоздатель #{link_to @post.user.email, user_path(@user)}
			- if current_user != @user && user_signed_in?
				- if current_user.favorites.find_by_post_id(@post.id)
					%i.fa.fa-star.favorite#make-favorite{ data: {post_id: @post.id, user_email: current_user.id} } 
						%span 
							= " " + "Добавлено в избранное"
				- else
					%i.fa.fa-star.unfavorite#make-favorite{ data: {post_id: @post.id, user_email: current_user.id} }
						%span 
							= " " + "В избранное!"
			%p Created  #{time_ago_in_words(@post.created_at)}
			%hr
			%p
				= raw(@post.content)
