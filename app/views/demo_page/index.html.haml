= content_for(:title, "Шпаргалки")
- if user_signed_in?
	.col-lg-9
		%h3.align Шпаргалки
		%hr
		- @posts.each do |post|
			.panel
				.panel-body
					%h3.clearfix.m-b
						= post.title
				.panel-footer.bg-light.lter
					.nav.nav-pills
						= link_to 'Подивитися', user_post_path(post.user, post), class: 'btn btn-info pull-right view-btn'
						- if current_user == post.user
							= link_to(fa_icon('trash', title: 'Delete'), post, confirm: 'Are you sure?', method: :delete, class: 'btn navbar-btn ')
						- else
							- if current_user.favorites.find_by_post_id(post.id)
								%i.fa.fa-star.view-btn.favorite{ data: {post_id: post.id, user_email: current_user.id} } 
							- else
								%i.fa.fa-star.view-btn.unfavorite{ data: {post_id: post.id, user_email: current_user.id} }
	.col-lg-3
		%h3.align Нещодавно додані
		%hr
		.panel
			- @recent_posts.each do |page|
				%h4.align
					= link_to page.title, user_post_path(page.user, page)
	.align
		= will_paginate @posts

- else
	.container.theme-showcase.welcome
		.row
			.jumbotron
				%h1 Шпора
				%p Перший українськомовний сервіс для студентів та школярів
				%p який допоможе здати всі екзамени та написати контрольні на відмінно :)
				%p Для цього потрібно лише зареєструватися!
				%p Зараз тут #{Post.count} шпор на різні теми, добавляй свою!
				= link_to 'Почати', new_user_registration_path, class: "btn btn-success"
