.container
  .row
    .col-md-4.col-md-offset-4
      .form-group
        %h2.align Зайти на шпору
        = form_tag user_session_path do
          %p
            .input-group
              %span.input-group-addon
                %i.fa.fa-envelope-o
              = text_field_tag 'user[email]', nil, :placeholder => 'Email', class: 'form-control'
          %p
            .input-group
              %span.input-group-addon
                %i.fa.fa-key
              = password_field_tag 'user[password]', nil, :placeholder => 'Пароль', class: 'form-control'
          %p
            = check_box_tag 'user[remember_me]'
            = label_tag 'user[remember_me]', 'Запамятати'
          %p
            %button.btn Ввійти