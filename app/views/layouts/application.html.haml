!!!
%html
  %head
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %title Demo
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
  - if user_signed_in?
    #site-wrapper
      #site-canvas
        #site-menu
          %section.hbox.stretch
            %aside.aside-lg.bg-black
              %section.vbox.step-sidebar
                = render 'layouts/sidebar'
        %section.vbox
          %header.header.bg-light.lter.b-b
            = render 'layouts/registration'
            #search-box
              .m-box
                = fa_icon('search')
              %form
                %input{type: "search", placeholder:"EXPLORE"}
          %section.resource.scrollable
            #content
              .row
                .col-lg-8
                  .panel
                    Main Content
                    = yield
                .col-lg-4
                  .panel
                    %h2 Favorite
                    Not main
  - else
    %section.vbox
      %header.header.bg-light.lter.b-b
        = image_tag "logo_m.png", class: "navbar-brand logo"
        = render 'layouts/registration'
      = yield
      %footer
        &copy 2014 Shpora

          